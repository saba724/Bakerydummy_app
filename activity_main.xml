<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/wel_color">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/front_image"
        android:layout_height="200dp"
        android:src="@drawable/chef"
        android:layout_marginTop="200dp"
        />

    <TextView
        android:id="@+id/bak_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CakeCorner"
        android:layout_below="@+id/front_image"
        android:layout_marginTop="10dp"
        android:textSize="70sp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/bangers" />

    <TextView
        android:id="@+id/bk_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bak_name"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/antic"
        android:text="Hapiness starts here!..."
        android:textSize="30dp" />


</RelativeLayout>
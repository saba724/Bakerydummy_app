<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pizza"
    android:background="@drawable/wel_color">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza"
        android:id="@+id/pizza_tv"
        android:textColor="@color/black"
        android:fontFamily="@font/antic"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:id="@+id/sv"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pizza_tv">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--    <ScrollView-->
            <!--        android:id="@+id/scroll_v"-->
            <!--        android:layout_width=""-->
            <!--        android:layout_height=""-->
            <!--        android:layout_below="@+id/anivr_tv">-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/p_cv1"
                android:layout_height="250dp"
                android:layout_below="@id/cream_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="390dp"
                        android:layout_height="230dp"
                        android:src="@drawable/piz1"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="10dp"
                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:id="@+id/addcart_cv1"
                android:layout_below="@+id/b_cv1"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                app:cardElevation="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hot Pizza"
                    android:fontFamily="@font/antic"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs:200.00"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="30dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to cart"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="250dp"
                    android:background="@drawable/button_curve"
                    />
            </androidx.cardview.widget.CardView>


            <!--    2nd card view/2 cake -->


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/p_cv2"
                android:layout_height="250dp"

                android:layout_below="@id/addcart_cv1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="350dp"
                        android:layout_height="230dp"
                        android:src="@drawable/pizza2"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/addcart_cv2"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_below="@+id/a_cv2"

                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                app:cardElevation="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chicken Pizza"
                    android:fontFamily="@font/antic"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs:300.00"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="30dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to cart"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="250dp"
                    android:background="@drawable/button_curve"
                    />
            </androidx.cardview.widget.CardView>


            <!--    3 cake-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/p_cv3"
                android:layout_height="250dp"

                android:layout_below="@id/addcart_cv2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                tools:ignore="DuplicateIds">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="230dp"
                        android:src="@drawable/pizz3"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="44dp"
                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/addcart_cv3"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_below="@+id/a_cv3"

                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                app:cardElevation="10dp"
                tools:ignore="DuplicateIds">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chilli Pizza"
                    android:fontFamily="@font/antic"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs:200.00"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="30dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to cart"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="250dp"
                    android:background="@drawable/button_curve"
                    />
            </androidx.cardview.widget.CardView>


            <!--            4 cake-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/p_cv4"
                android:layout_height="250dp"

                android:layout_below="@id/addcart_cv3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                tools:ignore="DuplicateIds">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="230dp"
                        android:src="@drawable/pozz4"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="44dp"
                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/addcart_cv4"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_below="@+id/a_cv3"

                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                app:cardElevation="10dp"
                tools:ignore="DuplicateIds">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crispy Pizza "
                    android:fontFamily="@font/antic"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs:200.00"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="30dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to cart"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="250dp"
                    android:background="@drawable/button_curve"
                    />
            </androidx.cardview.widget.CardView>









        </LinearLayout>
    </ScrollView>






</RelativeLayout>